<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rescheduler.Views.Login">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Image Margin="0,20,0,0" HeightRequest="150">
                <Image.Source>
                    <UriImageSource Uri="{StaticResource FoxImage}"  
                                        CacheValidity="100"
                                        CachingEnabled="True"/>
                </Image.Source>
            </Image>
            <Button Text="Login With Microsoft" Style="{StaticResource ButtonStyle}"/>
            <Button Text="Login With Facebook" Style="{StaticResource ButtonStyle}"/>
            <Button Text="Login With Google" Style="{StaticResource ButtonStyle}"/>

            <Button Text="Login With Guest" Margin="0,15,0,0" Style="{StaticResource ButtonStyle}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>